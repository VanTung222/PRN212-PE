<!-- TranVanTungWPF/Views/CustomerDashboard.xaml -->
<Window x:Class="TranVanTungWPF.Views.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dashboard" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Customer Dashboard" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Full Name" FontWeight="Bold"/>
            <TextBox Text="{Binding Customer.CustomerFullName, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Email" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Customer.EmailAddress, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Telephone" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Customer.Telephone, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Birthday" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Customer.CustomerBirthday, StringFormat=dd/MM/yyyy, Mode=OneWay}" IsReadOnly="True"/>
            <Button Content="Update Profile" Width="150" Margin="0,20,0,0" Command="{Binding UpdateProfileCommand}"/>
        </StackPanel>
    </Grid>
</Window>