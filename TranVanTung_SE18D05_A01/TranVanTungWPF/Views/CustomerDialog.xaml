<!-- TranVanTungWPF/Views/CustomerDialog.xaml -->
<Window x:Class="TranVanTungWPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dialog" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Full Name" Margin="0,10,0,5"/>
        <TextBox Grid.Row="2" Text="{Binding Customer.CustomerFullName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="3" Text="Email" Margin="0,10,0,5"/>
        <TextBox Grid.Row="4" Text="{Binding Customer.EmailAddress, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="5" Text="Telephone" Margin="0,10,0,5"/>
        <TextBox Grid.Row="6" Text="{Binding Customer.Telephone, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="7" Text="Birthday" Margin="0,10,0,5"/>
        <DatePicker Grid.Row="8" SelectedDate="{Binding Customer.CustomerBirthday}"/>
        <TextBlock Grid.Row="9" Text="Password" Margin="0,10,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="10" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Command="{Binding SaveCommand}" CommandParameter="{Binding Text, ElementName=PasswordBox}"/>
            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock Grid.Row="12" Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
    </Grid>
</Window>